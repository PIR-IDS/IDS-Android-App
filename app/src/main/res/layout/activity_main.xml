<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.view.MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/remote_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to remote service"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:onClick="startServiceActivity"/>

        <Spinner
            android:id="@+id/remote_service_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/ids_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:text="Connect IDS device"
            android:textAlignment="center"
            app:icon="@android:drawable/stat_sys_data_bluetooth" />

        <Button
            android:id="@+id/start_detection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:enabled="false"
            android:text="Start detection" />

        <Button
            android:id="@+id/stop_detection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:enabled="false"
            android:text="Stop detection" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>